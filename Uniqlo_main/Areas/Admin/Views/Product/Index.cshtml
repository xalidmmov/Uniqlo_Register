@using Uniqlo_main.Models
@model List<Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="container mt-4">
    <h1 class="text-center">Product Management</h1>

    <div class="mb-3 text-end">
        <a class="btn btn-primary" asp-action="Create">Create New Product</a>
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Cost Price</th>
                <th scope="col">Sell Price</th>
                <th scope="col">Discount</th>
                <th scope="col">Quantity</th>
                <th scope="col">Stock Count</th>
                <th scope="col" colspan="2" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <img src="~/imgs/products/@item.CoverImage" width="80" alt="@item.Name" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Category?.Name</td>
                    <td>@string.Format("{0:C}", item.CostPrice)</td>
                    <td>@string.Format("{0:C}", item.SellPrice)</td>
                    <td>@item.Discount %</td>
                    <td>@item.Quantity</td>
                    <td class="text-center">
                        <a class="btn btn-outline-success btn-sm" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td class="text-center">
                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
